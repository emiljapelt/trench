{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "trench",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#main" }
	],
	"repository": {
		"main": {
			"patterns": [{
				"name": "keyword",
				"match": "\\b(let)\\b"
			},{
				"name": "support.type",
				"match": "\\b(int|dir|field|property|resource)\\b"
			},{
				"name": "keyword.control",
				"match": "\\b(while|break|continue|return|goto|if|is|else|repeat)\\b"
			},{
				"name": "constant.language",
				"match": "\\b(N|S|E|W)\\b"
			},{
				"name": "constant.numeric",
				"match": "\\b(-?[0-9]+)\\b"
			},{
				"name": "keyword.other",
				"match": "\\b([A-Za-z'][A-Za-z0-9_]*):"
			},{
				"name": "constant.language",
				"match": "(#(clay|explosive|ammo|mana|sapling|wood|metal))\\b"
			},{
				"name": "constant.language",
				"match": "(@(obstruction|player|trapped|flammable|cover|shelter|empty|trench|ice_block|tree|ocean|wall|bridge|clay|mine_shaft))\\b"
			},{
				"name": "constant.language",
				"match": "\\b(id|x|y|board_width|board_height|_SUCCESS|_ERROR|_MISSING_RESOURCE|_OUT_OF_BOUNDS|_INVALID_TARGET|_OUT_OF_RANGE|_OBSTRUCTED|_MISSING_SPACE|round)\\b"
			},{
				"name": "support.function",
				"match": "\\b(move|trench|fortify|wait|pass|meditate|projection|collect|bomb|freeze|shoot|mine|fireball|chop|dispel|disarm|mana_drain|wall|bridge|plant_tree|mount|dismount|boat|bear_trap|write|pager_write|pager_set|say|pager_read|read|scan|look|throw_clay|clay_golem|count|drop|take|mine_shaft|craft)\\b"
			},{
				"name": "variable.name",
				"match": "\\b([A-Za-z'][A-Za-z0-9_]*)\\b"
			}]
		},
		"comments": {
			"name": "comment.line",
			"begin": "//",
			"end": "\\n"
		}
	},
	"scopeName": "source.tr"
}